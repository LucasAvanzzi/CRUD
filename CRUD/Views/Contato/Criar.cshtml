@{
    ViewData["Title"] = "Criar contatos";
}
<div class="text-center">
    <h1 class="display-4">Cadastrar Contato</h1>
</div>
<form>
    <div class="form-group">
        <label for="nome">Nome</label>
        <input type="text" class="form-control" placeholder="Digite nome do seu contato">
    </div>
    <div class="form-group">
        <label for="email">E-mail</label>
        <input type="text" class="form-control" placeholder="Digite e-mail do seu contato">
    </div>
    <div class="form-group">
        <label for="celular">Celular</label>
        <input type="text" class="form-control" placeholder="Digite celular do seu contato">
    </div>
    <p>

    </p>
    <button type="submit" class="btn btn-primary">Adicionar</button>
    <a class="btn btn-secondary" asp-controller="Contato" asp-action="Index" role="button">Voltar</a>
    
</form>